<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rss Search Engine</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/kendo-ui/styles/2017.3.1026/kendo.common-bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/kendo-ui/styles/2017.3.1026/kendo.bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/rss.search.min.css" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/kendo-ui/js/2017.3.1026/kendo.all.min.js"></script>
    <script src="~/lib/kendo-ui/js/2017.3.1026/kendo.aspnetmvc.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-page="/Index" class="navbar-brand">RSS Search Engine</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-page="/Index"><i class="fa fa-home"></i> Home</a></li>
                    <li><a asp-page="/About"><i class="fa fa-cogs"></i> About</a></li>
                    <li><a asp-page="/Contact"><i class="fa fa-cogs"></i> Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2017 - Rss Search Engine</p>
        </footer>
    </div>
    <script src="~/js/rss.search.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
